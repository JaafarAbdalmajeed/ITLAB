<?php
/**
 * Product Stock and SKU Template
 * Organized display of stock status and SKU
 * @var \Magento\Catalog\Block\Product\View $block
 */
?>
<?php $_product = $block->getProduct(); ?>
<?php if ($_product): ?>
    <div class="product-stock-sku">
        <?php if ($_product->isAvailable()): ?>
            <div class="stock available">
                <span><?= $block->escapeHtml(__('In stock')) ?></span>
            </div>
        <?php else: ?>
            <div class="stock unavailable">
                <span><?= $block->escapeHtml(__('Out of stock')) ?></span>
            </div>
        <?php endif; ?>
        
        <?php if ($_product->getSku()): ?>
            <div class="sku">
                <span class="type"><?= $block->escapeHtml(__('SKU:')) ?></span>
                <span class="value"><?= $block->escapeHtml($_product->getSku()) ?></span>
            </div>
        <?php endif; ?>
    </div>
<?php endif; ?>

